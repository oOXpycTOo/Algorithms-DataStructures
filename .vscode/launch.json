{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ build & run",                
            "type": "cppdbg",                         
            "request": "launch",                        
            "targetArchitecture": "x86",                
            "program": "${workspaceRoot}\\${fileBasenameNoExtension}.out",                 
            "miDebuggerPath":"/usr/bin/gdb", 
            "MIMode": "gdb",
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": false
                }
            ],
            "args": [],     
            "stopAtEntry": false,                  
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build & run"     
        },
        {
            "name": "C++ build & debug",                
            "type": "cppdbg",                         
            "request": "launch",                        
            "targetArchitecture": "x86",                
            "program": "${workspaceRoot}\\${fileBasenameNoExtension}.out",                 
            "miDebuggerPath":"/usr/bin/gdb", 
            "MIMode": "gdb",
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": false
                }
            ],
            "args": [],     
            "stopAtEntry": false,                  
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build & debug"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
 }