{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-DONLINE_JUDGE",
                "-O2",
                "-static",
                "-Wall",
                "-Wextra",
                "--std=c++14",
                "-o",
                "${fileBasenameNoExtension}.out",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build & run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-DONLINE_JUDGE",
                "-O2",
                "-static",
                "-Wall",
                "-Wextra",
                "--std=c++14",
                "-o",
                "${fileBasenameNoExtension}.out",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}